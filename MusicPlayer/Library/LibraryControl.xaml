                    <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                      <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0.5,1.0" EndPoint="0.5,0.0">
                          <GradientStop Color="Green" Offset="0.0"/>
                          <GradientStop Color="Green" Offset="{Binding Path=Weight, FallbackValue=1.0}"/>
                          <GradientStop Color="Red" Offset="{Binding Path=Weight, FallbackValue=1.0}"/>
                          <GradientStop Color="Red" Offset="1.0"/>
                        </LinearGradientBrush>
                      </Rectangle.Fill>
                    </Rectangle>
                  </Border>
                  <TextBlock Text="{Binding Name}" FontSize="14" VerticalAlignment="Center"/>
                  <TextBlock Text="{Binding LiveString}" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
              </HierarchicalDataTemplate>
            </TreeView.Resources>
          </TreeView>
        </DockPanel>
      </TabItem>
