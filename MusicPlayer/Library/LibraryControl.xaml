                  <TextBlock Text="{Binding Name}" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
              </HierarchicalDataTemplate>

              <HierarchicalDataTemplate DataType="{x:Type local:RecordingViewModel}">
