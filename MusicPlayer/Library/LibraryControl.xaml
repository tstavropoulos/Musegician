                  <StackPanel.ContextMenu>
                    <ContextMenu>
                      <MenuItem Header="Add Song To Playlist" 
                                          Click="Add"/>
                      <MenuItem Header="Play Song" 
                                          Click="Play"/>
                      <MenuItem Header="Edit Song Information" 
                                          Click="Edit"/>
                    </ContextMenu>
                  </StackPanel.ContextMenu>
                  <Border Height="30" Width="7" Padding="1" Background="Black" Margin="0,0,5,0">
                    <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                      <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0.5,0.0" EndPoint="0.5,1.0">
                          <GradientStop Color="Green" Offset="0.0"/>
                          <GradientStop Color="Green" Offset="{Binding Path=Weight, FallbackValue=1.0}"/>
                          <GradientStop Color="Red" Offset="{Binding Path=Weight, FallbackValue=1.0}"/>
                          <GradientStop Color="Red" Offset="1.0"/>
                        </LinearGradientBrush>
                      </Rectangle.Fill>
                    </Rectangle>
                  </Border>
                  <TextBlock Text="{Binding Name}" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
              </HierarchicalDataTemplate>

              <HierarchicalDataTemplate DataType="{x:Type local:RecordingViewModel}">
                <StackPanel Orientation="Horizontal" Background="Transparent">
                  <StackPanel.ContextMenu>
                    <ContextMenu>
                      <MenuItem Header="Add Track To Playlist" 
                                          Click="Add"/>
                      <MenuItem Header="Play Track" 
                                          Click="Play"/>
                      <MenuItem Header="Edit Track Information" 
                                          Click="Edit"/>
                    </ContextMenu>
                  </StackPanel.ContextMenu>
